generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  name            String?
  image           String?
  emailVerified   DateTime?
  createdAt       DateTime         @default(now())
  accounts        Account[]
  learningPath    LearningPath?
  progress        Progress?
  sessions        Session[]
  stories         Story[]
  transcripts     Transcript[]
  mockInterviews  MockInterview[]
  jobApplications JobApplication[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Progress {
  id                        String    @id @default(cuid())
  userId                    String    @unique
  scenariosCompleted        String    @default("[]")
  frameworksViewed          String    @default("[]")
  principlesViewed          String    @default("[]")
  quizHighScore             Int       @default(0)
  practiceSessionCount      Int       @default(0)
  totalPracticeMinutes      Int       @default(0)
  streakDays                Int       @default(0)
  lastPracticeDate          DateTime?
  storytellingModulesViewed String    @default("[]")
  updatedAt                 DateTime  @updatedAt
  user                      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Story {
  id                String    @id @default(cuid())
  userId            String
  title             String
  category          String
  situation         String
  task              String
  action            String
  result            String
  impact            String
  companiesRelevant String    @default("[]")
  questionTypes     String    @default("[]")
  tags              String    @default("[]")
  strengthScore     Int       @default(0)
  lastPracticed     DateTime?
  notes             String    @default("")
  aiGenerated       Boolean   @default(false)
  sourceType        String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LearningPath {
  id                  String    @id @default(cuid())
  userId              String    @unique
  currentWeek         Int       @default(1)
  completedWeeks      String    @default("[]")
  weekProgressData    String    @default("{}")
  startedAt           DateTime  @default(now())
  targetInterviewDate DateTime?
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transcript {
  id             String   @id @default(cuid())
  userId         String
  scenarioId     String
  scenarioTitle  String
  responseText   String
  elapsedSeconds Int
  wordCount      Int      @default(0)
  fillerCount    Int      @default(0)
  hasNumbers     Boolean  @default(false)
  wpm            Int?
  pauseCount     Int?
  speechRatio    Float?
  aiAnalysis     String?
  createdAt      DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, scenarioId])
}

model MockInterview {
  id           String    @id @default(cuid())
  userId       String
  company      String
  roleLevel    String
  status       String    @default("in_progress")
  messages     String    @default("[]")
  totalTurns   Int       @default(0)
  overallScore Int?
  finalSummary String?
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startedAt])
}

model JobApplication {
  id            String    @id @default(cuid())
  userId        String
  company       String
  role          String
  interviewDate DateTime?
  status        String    @default("applied")
  notes         String    @default("")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, interviewDate])
}
